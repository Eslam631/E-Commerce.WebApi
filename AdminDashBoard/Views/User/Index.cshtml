@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2 text-center ">All users</h1>



@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(u => u.Id)</th>
                <th scope="col">@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th scope="col">@Html.DisplayNameFor(u => u.Email)</th>
                <th scope="col">@Html.DisplayNameFor(u => u.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(u => u.Roles)</th>
                <td>Action</td>

            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@string.Join(",",user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit </a>
                     
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="mt-3 p-2 alert alert-warning">There Are No user yet </p>
}


