
 @model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2 text-center ">All Roles</h1>

<partial name="PartialView/CreateEditRolePartialView.cshtml" model="new RoleViewModel()" />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(R=>R.Id)</th>
                <th scope="col">@Html.DisplayNameFor(R => R.Name)</th>
                <td>Action</td>

            </tr>
        </thead>
        <tbody>

            @foreach(var role in Model)
            {<tr>

                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id">Edit </a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="mt-3 p-2 alert alert-warning">There Are No Role yet </p>
}
